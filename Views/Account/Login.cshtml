@using StudentManagementSystems.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="data:image/png;base64,"
                                         class="rounded-5" style="width: 100px; height:100px;margin-bottom:30px" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">🫣 We are Group 1 🎉</h4>
                                </div>

                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <p>Please login to your account</p>

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-check mb-4">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                                    </div>
                                    <div class="text-center mb-4">
                                        <input type="submit" value="Log in" class="btn btn-primary btn-block fa-lg " style="width: 50%" />
                                    </div>

                                    <div class="mb-4 link-primary" style="text-align: right; ">
                                        @Html.ActionLink("Login as admin role?", "Index", "StudentAdmin", new { area = "" }, new { @class = "nav-link" })
                                    </div>
                                }

                            </div>
                        </div>

                        <div class="col-lg-6 d-flex align-items-center" style="background: radial-gradient(circle at -8.9% 51.2%, rgb(255, 124, 0) 0%, rgb(255, 124, 0) 15.9%, rgb(255, 163, 77) 15.9%, rgb(255, 163, 77) 24.4%, rgb(19, 30, 37) 24.5%, rgb(19, 30, 37) 66%);">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">There are demo account</h4>
                                <p class="small mb-0">
                                <p>Student:</p>
                                <p>phame@vnu.edu.vn</p>
                                <p>nguyenb@vnu.edu.vn</p>
                                <p>Admin: admin@123.com</p>
                                <p>PW: Ab12345!</p>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}