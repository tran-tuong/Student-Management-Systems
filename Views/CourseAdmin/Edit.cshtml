@model StudentManagementSystems.Models.Course

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Course";
}

<h1>Edit Course</h1>

<h4>Course</h4>
<hr />
<div class="row">
