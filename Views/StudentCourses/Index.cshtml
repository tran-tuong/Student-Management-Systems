@model IEnumerable<StudentManagementSystems.Models.Course>
@{
    ViewBag.Title = "Courses";
    var courseidSortParm = ViewBag.CoureIDSortParm as string;
    var nameSortParm = ViewBag.NameSortParm as string;
    var quantitySortParm = ViewBag.QuantitySortParm as string;
    var startDateSortParm = ViewBag.StartDateSortParm as string;
}

<h2 class="w-100 text-center">Courses</h2>

<form method="get" action="@Url.Action("Index")">
    <div class="row mb-3">
        <div class="col-9">
            <!-- Optional space for future enhancements -->
        </div>
        <div class="col-3 ps-1">
            <div class="form-group me-1 mb-3">
                <div class="input-group">
                    <input value="@ViewBag.CurrentFilter" type="text" class="form-control" placeholder="Name, ID" name="searchString">
                    <button class="btn btn-primary" type="submit" id="btn_search">Search</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                @Html.ActionLink("CourseID", "Index", new { sortOrder = courseidSortParm })
            </th>
            <th class="text-center">
                @Html.ActionLink("Course Name", "Index", new { sortOrder = nameSortParm })
            </th>
            <th class="text-center">Categories</th>
            <th class="text-center">
                @Html.ActionLink("Quantity", "Index", new { sortOrder = quantitySortParm })
            </th>
            <th class="text-center">Instructor</th>
            <th class="text-center">
                @Html.ActionLink("Start Date", "Index", new { sortOrder = startDateSortParm })
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.CourseID)</td>
                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Categories)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Instructor)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td class="text-center" style="white-space: nowrap">
                    <a href="@Url.Action("Details", new { id = item.CourseID })" class="btn btn-primary text-light" style="text-decoration: none;">
                        <i class="bi bi-exclamation-circle-fill"></i> Details
                    </a>
                    <a href="@Url.Action("Enroll", new { id = item.CourseID })" class="btn btn-success text-light" style="text-decoration: none;">
                        <i class="bi bi-person-plus-fill"></i> Enroll
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
